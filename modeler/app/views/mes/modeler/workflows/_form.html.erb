<div data-hook="modeler_factory_form_fields" class="row">
  <div class="col-md-8">
    <%= f.field_container :name, :class => ['form-group'] do %>
      <%= f.label :name, Mes.t(:name) %><br>
      <%= f.text_field :name, :class => 'form-control' %>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= f.field_container :active, :class => ['checkbox'] do %>
      <%= label_tag :active do %>
        <%= f.check_box :active %>
        <%= Mes.t(:active) %>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-12">
    <%= f.field_container :description, :class => ['form-group'] do %>
      <%= f.label :description, Mes.t(:description) %><br>
      <%= f.text_field :description, :class => 'form-control' %>
    <% end %>
  </div>
  <div class="col-md-6">
    <table class="table" id="listing_workflow_steps">
      <thead>
        <tr>
          <th class="no-border"></th>
          <th><%= Mes.t(:sequence) %></th>
          <th><%= Mes.t(:name) %></th>
          <th><%= Mes.t(:description) %></th>
          <th class="actions">Delete?</th>
        </tr>
      </thead>
      <tbody class="sortable">
      <% workflow.steps.each do |step| -%>
        <%= f.fields_for :steps, step do |g| -%>
        <tr>
          <td class="move-handle">
            <span class="glyphicon glyphicon-sort handle"></span>
          </td>
          <td><%= step.sequence -%><%= g.hidden_field :sequence -%></td>
          <td><%= step.name %></td>
          <td><%= step.description %></td>
          <td class="actions">
            <%= g.check_box :_destroy %>
          </td>
        </tr>
        <% end -%>
      <% end -%>
      </tbody>
    </table>
  </div>
</div>
